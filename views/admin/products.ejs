<!-- Custom styles for this page -->
<link href="/vendor/datatables/dataTables.bootstrap4.min.css" rel="stylesheet">

<!-- Begin Page Content -->
<div class="container-fluid">

    <!-- Page Heading -->
    <h1 class="h3 mb-2 text-gray-800">All Products</h1>
    <p class="mb-4">View, Update, Create, and delete products
        <br>Some fields can be updated within this page those fields are highlighted
    </p>

    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">All users</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>IMG</th>
                            <th>Title</th>
                            <th>Description</th>
                            <th>Price</th>
                            <th>Quantitly</th>
                            <!-- <th>Discount</th> -->
                            <th>Category</th>
                            <th>Created</th>
                            <th style="cursor: pointer; text-align: center;">-</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% products.forEach((product,index,array)=>{ %>
                            <tr>
                                <td>
                                    <%=index+1%>
                                </td>
                                <td style="text-transform:capitalize;">
                                    <img style="width: 60px;" src="/product_images/<%=product.PID%>1.jpg" alt="IMG">
                                </td>
                                <td>
                                    <%=product.title%>
                                </td>
                                <td>
                                    <%=product.description%>
                                </td>
                                <td class="tabe_editable_TD" title="Click To edit"
                                    onclick="categoryName('<%=product.PID%>',this)">
                                    <input type="text" class="input_editable" disabled data-id="<%=product.PID%>"
                                        value="<%=product.price%>" data-type="price">
                                </td>
                                <td class="tabe_editable_TD" title="Click To edit"
                                    onclick="categoryName('<%=product.PID%>',this)">
                                    <input type="text" class="input_editable" disabled data-id="<%=product.PID%>"
                                        value="<%=product.stock%>" data-type="stock">
                                </td>
                                <!-- <td>
                                    <%=product.offer?product.offer:'-'%>
                                </td> -->
                                <td>
                                    <%=product.category%>
                                </td>
                                <td>
                                    <%=product.creationTime%>
                                </td>
                                <td style="cursor: pointer; text-align: center;"
                                    onclick="window.location.href='/admin_panel/products/edit_product/<%=product.PID%>'">
                                    more&nbsp;<i class="fas fa-cog"></i>
                                </td>
                            </tr>
                            <% }); %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<!-- /.container-fluid -->


<script>

    function categoryName(ID, td, type) {
        const categoryInput = td.querySelector('input');
        categoryInput.removeAttribute('disabled');
        categoryInput.focus();
    };

    const inputCollection = document.querySelectorAll('input.input_editable');

    inputCollection.forEach(element => {
        element.addEventListener('keyup', e => {
            if (e.keyCode == 13) {
                const value = e.target.value;
                const PID = e.target.getAttribute('data-id');
                const input = e.target;
                const type = e.target.getAttribute('data-type');
                saveCurrentValue(PID, value, input, type);
            };
        });
        element.addEventListener('focusout', e => {
            const value = e.target.value;
            const PID = e.target.getAttribute('data-id');
            const input = e.target;
            const type = e.target.getAttribute('data-type');
            saveCurrentValue(PID, value, input, type);
        });
    });

    function saveCurrentValue(PID, value, input, type) {
        input.style.borderColor = 'black';

        if (value?.length > 2) {

            fetch('/admin_panel/products/edit_product', {
                method: 'PUT',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({

                    price: type == 'price' ? value : null,
                    stock: type = 'stock' ? value : null,
                    PID: PID ? PID : null,
                    type: type ? type : null

                })
            })
                .then(res => res.json())
                .then(res => {
                    if (res.status == 'error') {
                        console.log('ERROR_A => ', res.message);
                        input.style.borderColor = 'red';
                    } else {
                        input.style.borderColor = '';
                        input.setAttribute('disabled', '');
                    }
                })
                .catch(error => {
                    console.error(error);
                    input.style.borderColor = 'red';
                });

        } else {
            input.style.borderColor = 'red';
        };
    };

</script>