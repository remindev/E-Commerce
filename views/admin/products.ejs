<div class="container-fluid">

  <div class="d-flex justify-content-between my-3">
    <div class="left">
      <h1 class="h3 mb-4 d-flex gap-2"><i class="mdi mdi-shopping"></i> Products</h1>
    </div>
    <div class="right">
      <a href="/" class="btn btn-inverse-warning">Draft's</a>
      <a href="/products/add_product" class="btn btn-inverse-info">+ Add new product</a>
    </div>
  </div>

  <!-- DataTales Example -->
  <div class="card">
    <div class="card-header bg-white p-3">
      <h5 class="m-0">All Products</h5>
    </div>
    <div class="card-body p-2">
      <div class="table-responsive bg-white p-2 rounded">
        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
          <thead>
            <tr>
              <th>#</th>
              <th>IMG</th>
              <th>Title</th>
              <th>Price</th>
              <th>Quantitly</th>
              <th>Category</th>
              <th>Created</th>
              <th style="cursor: pointer; text-align: center;">-</th>
            </tr>
          </thead>
          <tbody id="tableToEdit">
            <!-- table content -->
            <% locals?.products?.data?.forEach((product,index) => { %>
            <tr>
              <td>
                <%= index+1 %>
              </td>
              <td>
                <img src="/product_images/<%=product.PID%>1.jpg" class="img-fluid rounded" alt="">
              </td>
              <td>
                <%= product?.title?.slice(0, 55) + '...' %>
              </td>
              <td>
                â‚¹ <%= product?.price %>
              </td>
              <td>
                <%= product?.stock %> Pcs
              </td>
              <td>
                <%= product?.category %>
              </td>
              <td>
                <%= locals?.util?.dataToReadable(product.creationTime) %>
              </td>
              <td>
                <a href="/products/view_product/<%=product?.PID%>" class="btn p-0 m-0"><b>More</b></a>
              </td>
            </tr>
            <% }); %>
          </tbody>
        </table>
        <div class="d-flex justify-content-end mt-3">
          <nav aria-label="Page navigation example">
            <ul class="pagination">

              <% if(Number(locals?.products?.data[0]?.currentPage)<=1){%>
              <li class="page-item disabled" id="btnE">
                <a class="page-link" disabled data-current="1">Previous</a>
              </li>
              <% }else{; %>
              <li class="page-item" id="btnE">
                <a class="page-link" data-current="1" href="/products?page=<%=Number(locals?.products?.data[0]?.currentPage)-1%>">Previous</a>
              </li>
              <% }; %>

              <% if(Number(locals?.products?.data[0]?.currentPage)==1){ %>
              <li class="page-item active" id="btnB"><a class="page-link" href="/products?page=<%=Number(locals?.products?.data[0]?.currentPage)%>" data-current="1">1</a></li>

              <% if(Number(locals?.products?.data[0]?.maxPage)>=2){ %>
              <li class="page-item" id="btnC"><a class="page-link" href="/products?page=<%=Number(locals?.products?.data[0]?.currentPage)+1%>" data-current="1">2</a></li>
              <% } %>

              <% if(Number(locals?.products?.data[0]?.maxPage)>=3){ %>
              <li class="page-item" id="btnC"><a class="page-link" href="/products?page=<%=Number(locals?.products?.data[0]?.currentPage)+2%>" data-current="1">3</a></li>
              <% } %>

              <% }else if(Number(locals?.products?.data[0]?.maxPage)==Number(locals?.products?.data[0]?.currentPage)){ %>


              <% if(Number(locals?.products?.data[0]?.currentPage)-2>=1){ %>
              <li class="page-item " id="btnB"><a class="page-link" href="/products?page=<%=Number(locals?.products?.data[0]?.currentPage)-2%>" data-current="1"><%=locals?.products?.data[0]?.currentPage-2%></a></li>
              <% } %>
              <% if(Number(locals?.products?.data[0]?.currentPage)-1>=1){ %>
              <li class="page-item " id="btnB"><a class="page-link" href="/products?page=<%=Number(locals?.products?.data[0]?.currentPage)-1%>" data-current="1"><%=locals?.products?.data[0]?.currentPage-1%></a></li>
              <% } %>
              <li class="page-item active" id="btnB"><a class="page-link" href="/products?page=<%=Number(locals?.products?.data[0]?.currentPage)%>" data-current="1"><%=locals?.products?.data[0]?.currentPage%></a></li>

              <% }else { %>

              <li class="page-item" id="btnB"><a class="page-link" href="/products?page=<%=Number(locals?.products?.data[0]?.currentPage)-1%>" data-current="1"><%=locals?.products?.data[0]?.currentPage-1%></a></li>
              <li class="page-item active" id="btnB"><a class="page-link" href="/products?page=<%=Number(locals?.products?.data[0]?.currentPage)%>" data-current="1"><%=locals?.products?.data[0]?.currentPage%></a></li>
              <% if(Number(locals?.products?.data[0]?.maxPage)>Number(locals?.products?.data[0]?.currentPage)){ %>
              <li class="page-item" id="btnB"><a class="page-link" href="/products?page=<%=Number(locals?.products?.data[0]?.currentPage)+1%>" data-current="1"><%=locals?.products?.data[0]?.currentPage+1%></a></li>
              <% } %>

              <% } %>

              <% if(locals?.products?.data[0]?.maxPage==locals?.products?.data[0]?.currentPage){%>
              <li class="page-item disabled" id="btnE">
                <a class="page-link" disabled data-current="1">Next</a>
              </li>
              <% }else{; %>
              <li class="page-item" id="btnE">
                <a class="page-link" data-current="1" href="/products?page=<%=Number(locals?.products?.data[0]?.currentPage)+1%>">Next</a>
              </li>
              <% }; %>

            </ul>
          </nav>
        </div>
      </div>
    </div>
  </div>

</div>
