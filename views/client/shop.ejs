              <% if(locals.categorys){ %>
              <% for(let i=0; i<locals.categorys.length; i++){if(i<10){ %>
              <li><a href="/c/<%= categorys[i]?.category %> " style="text-transform: capitalize;"> <%= categorys[i]?.category %> </a></li>
              <%} };%>
              <% }; %>
            </ul>
          </div>

