        </div>
      </div>


      <div class="col-lg-10 col-md-7">
        <div class="product__discount">
          <div class="section-title product__discount__title">
            <h2>Sale Off</h2>
          </div>

          <div class="row">
            <% locals?.products?.forEach((product,index)=>{ %>
            <div class="col-12 col-md-6 px-md-0">
              <div class="card p-3 m-1" onclick="window.location.href='/product/<%=product.PID%>'" style='cursor: pointer;'>
                <div class="row">
                  <div class="col-5">
                    <img src="/product_images/<%= product.PID %>1.jpg " class="img-fluid" alt="">
                  </div>
                  <div class="col-7">
                    <h6 class="limit_lines_css l-3" style="cursor: pointer;"><%= product.title %> </h6>

                    <span class="text-dark mt-1 mb-0">
                      <b><%= product.price - product.offer%> Rs</b>
                    </span>
                    <% if(product.offer){ %>
                    <b class="text-danger"><sup> - <%= product.offer%>Rs OFF </sup></b>
                    <s>
                      <b>
                        <p class="m-0">MRP : <%= product.price %> Rs </p>
                      </b>
                    </s>
                    <br>
                    <span class="bg-danger text-white px-3"><%= product.stock!=0?product.stock<10?`Only ${product.stock} stock is avaiable`:'In Stock':'Out of stock' %> </span>
                    <% }else{ %>
                    <br><br>
                    <span class="bg-danger text-white px-3"><%= product.stock!=0?product.stock<10?`Only ${product.stock} stock is avaiable`:'In Stock':'Out of stock' %> </span>
                    <% }; %>

                  </div>
                </div>
              </div>
            </div>
            <% }); %>
          </div>
        </div>

