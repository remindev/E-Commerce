          <div class="sidebar__item">
            <div class="latest-product__text">
              <h4>Latest Products</h4>
              <div class="latest-product__slider owl-carousel">
                <div class="latest-prdouct__slider__item">
                  <% locals.topProducts.forEach(e=>{ %>
                  <a href="/product/<%=e.product[0].PID %> " class="latest-product__item">
                    <div class="latest-product__item__pic">
                      <img src="/product_images/<%= e.product[0].PID %>1.jpg " alt="">
                    </div>
                    <div class="latest-product__item__text">
                      <h6 class="limit_lines_css l-2"><%= e.product[0].title %> </h6>
                      <span><%= e.product[0].price %> Rs</span>
                    </div>
                  </a>
                  <% }); %>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>


      <div class="col-lg-9 col-md-7">
        <div class="product__discount">
          <div class="section-title product__discount__title">
            <h2>Sale Off</h2>
          </div>
          <div class="row">
            <% locals?.products?.forEach((product,index)=>{ %>
            <div class="col-lg-4 col-md-6 col-sm-6" style="overflow: hidden;">
              <div class="product__item">
                <div class="product__item__pic set-bg" data-setbg="product_images/<%=product.PID %>1.jpg">
                  <ul class="product__item__pic__hover">
                    <li><a href="#"><i class="fa fa-heart"></i></a></li>
                    <li><a onclick="addToCart('<%=product.PID%>')"><i class="fa fa-shopping-cart"></i></a></li>
                  </ul>
                </div>
                <div class="product__item__text">
                  <h6><a class="limit_lines_css l-3" href="/product/<%=product.PID %>"><%=product.title %></a></h6>
                  <h5>â‚¹ <%=product.price %> </h5>
                </div>
              </div>
            </div>
            <% }); %>
          </div>
        </div>

