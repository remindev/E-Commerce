<!-- Product Section Begin -->
<section class="mt-0">
  <div class="container">
    <div class="row">
      <div class="col-lg-3 col-md-5">
        <div class="sidebar">
          <div class="sidebar__item">
            <h4>Categorys</h4>
            <ul>
              <% if(locals.categorys){ %>
              <% for(let i=0; i<locals.categorys.length; i++){if(i<10){ %>
              <li><a href="/c/<%= categorys[i]?.category %> " style="text-transform: capitalize;"> <%= categorys[i]?.category %> </a></li>
              <%} };%>
              <% }; %>
            </ul>
          </div>

