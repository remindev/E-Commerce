<!-- Related Product Section Begin -->
<section class="related-product">
  <div class="container">
    <div class="row">
      <div class="col-lg-12">
        <div class="section-title related__product__title">
          <h2>Related Product</h2>
        </div>
      </div>
    </div>
    <div class="row">
      <% locals?.topProducts?.forEach(e=>{ %>
      <div class="col-lg-3 col-md-4 col-sm-6">
        <div class="product__item">
          <div class="product__item__pic set-bg" data-setbg="/product_images/<%=e.product[0].PID %>1.jpg ">
            <ul class="product__item__pic__hover">
              <li><a href="#"><i class="fa fa-heart"></i></a></li>
              <li><a onclick="addToCart('<%=e.product[0].PID%>')"><i class="fa fa-shopping-cart"></i></a></li>
            </ul>
          </div>
          <div class="product__item__text">
            <h6 class="limit_lines_css l-2"><a href="/product/<%= e.product[0].PID %> "><%= e.product[0].title %> </a></h6>
            <h5><%=e.product[0].price%> Rs</h5>
          </div>
        </div>
      </div>
      <% }); %>
    </div>
  </div>
</section>
<!-- Related Product Section End -->

